@model Business.Models.SignInInput

@{
    Layout = "_UserLayout";
}

 <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="" class="">
                                <h3 class="text-warning"><i class="fa fa-book"></i> OnlineStudy</h3>
                            </a>
                            <h3 class="text-danger">Sign In</h3>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        </div>
                        <form asp-controller="Auth" asp-action="SignIn" asp-area="" method="post">
                            <div class="form-floating mb-3">
                                <input type="email" asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <div class="mb-3 form-check">
                                    <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="exampleCheck1">
                                    <label asp-for="RememberMe" class="form-check-label" for="exampleCheck1">Check me out</label>
                                </div>
                                <a href="/ForgotPassword/Index">Forgot Password</a>
                            </div>
                            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Sign In</button>
                        </form>
                        <p class="text-center mb-0">Don't have an Account? <a href="/RegisterUser/Index">Sign Up</a></p>
                    </div>
                </div>
            </div>
        </div>
