@model List<Business.Models.Catalog.CourseViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_UserLayout";
}

<div class="container">
    <h3 class="card-header" style="text-align: center">Course List</h3>
    <div class="table-responsive text-nowrap">
        @if (Model.Any())
        {
            <table class="table">
                <tr>
                    <th>#</th>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Duration</th>
                    <th>Description</th>
                    <th>Created Date</th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td></td>
                        <td><img src="@item.CourseImage" alt="Avatar" class="rounded-circle" style="max-width: 50px; max-height: 50px;" /></td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CourseName</strong></td>
                        <td>@item.CoursePrice</td>
                        <td>@item.Feature.Duration</td>
                        <td><span class="badge bg-label-primary me-1">@item.CourseDescription</span></td>
                        <td> @(((DateTime)item.CourseCreatedDate).ToString("dd-MMM-yyyy"))</td>
                        <td>
                            <a class="dropdown-item" href="javascript:void(0);" onclick="showDeleteConfirmation('@item.CourseId')"><i class="bx bx-trash me-1 text-danger"></i> Delete</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div class="alert alert-info">
                Can not found any record
            </div>
        }
    </div>
</div>
