@model List<Business.Models.Catalog.CourseViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_UserLayout";
}

<div class="container">
    <h3 class="card-header" style="text-align: center">Course List</h3>
    <div class="table-responsive text-nowrap">
        @if (Model.Any())
        {
            <table class="table">
                <tr>
                    <th>#</th>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Duration</th>
                    <th>Description</th>
                    <th>Created Date</th>
                    <th>Action</th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td></td>
                        <td><img src="@item.StockImageUrl" class="rounded-circle" style="max-width: 50px; max-height: 50px;" /></td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CourseName</strong></td>
                        <td>@item.CoursePrice</td>
                        <td>@item.Feature.Duration</td>
                        <td><span class="badge bg-label-primary me-1">@item.CourseDescription</span></td>
                        <td> @(((DateTime)item.CourseCreatedDate).ToString("dd-MMM-yyyy"))</td>
                        <td>
                            <a asp-action="Update" asp-controller="Course" asp-route-id="@item.CourseId" class="btn btn-warning"><i class="fa fa-edit"></i> Edit</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-controller="Course" asp-route-id="@item.CourseId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                        
                    </tr>
                }
            </table>
            <a asp-action="Create" asp-controller="Course" class="btn btn-primary"><i class="fa fa-plus"></i> Add New Course</a>
        }
        else
        {
            <div class="alert alert-info">
                Can not found any record
            </div>
        }
    </div>
</div>
