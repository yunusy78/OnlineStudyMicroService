@model System.Collections.Generic.List<Business.Dtos.Contact.TestimonialDto>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
    int i = 0;
}
          <div class="content-wrapper">
            <div class="row" id="proBanner">
            </div>
            <div class="page-header">
              <h3 class="page-title">
                <span class="page-title-icon bg-gradient-primary text-white mr-2">
                  <i class="mdi mdi-face-profile"></i>
                </span> Referanser
              </h3>
            </div>
            <div class="row">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <div class="table-responsive">
                       @if (Model.Any())
                              {
                                  <table class="table">
                                      <tr>
                                          <tr>
                                              <th>#</th>
                                              <th>Navn</th>
                                              <th>Email</th>
                                              <th>City</th>
                                              <th>Kommentar</th>
                                              <th>Opprettet dato</th>
                                              <th>Handling</th>
                                              <th>Handling</th>
                                      </tr>
                                      @foreach (var item in Model)
                                      {
                                          
                                          <tr>
                                              @{i = i + 1;}
                                              <td>@i</td>
                                              <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.FullName</strong></td>
                                              <td>@item.Email</td>
                                              <td>@item.City</td>
                                              <td><span class="badge bg-label-primary me-1">@item.Comment</span></td>
                                              <td> @(((DateTime)item.CreatedDate).ToString("dd-MMM-yyyy"))</td>
                                              <td>
                                                  <a asp-action="Update" asp-area="Admin" asp-controller="Testimonials" asp-route-id="@item.Id" class="btn btn-warning" ><i class="fa fa-edit"></i> Rediger</a>
                                              </td>
                                              <td>
                                                  <a asp-action="Delete" asp-area="Admin" asp-controller="Testimonials" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')"><i class="fa fa-trash"></i> Slett</a>
                                              </td>
                                              
                                          </tr>
                                      }
                                  </table>
                                  <br/>
                                 
                              }  
                              else
                              {
                                  <div class="alert alert-info">
                                        <strong>Info!</strong> Ingen Referanser funnet.
                                  </div>
                              }
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
       