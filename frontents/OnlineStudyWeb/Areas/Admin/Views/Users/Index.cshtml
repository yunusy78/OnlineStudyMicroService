@model List<Business.Models.UserViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
    int i = 0;
}
          <div class="content-wrapper">
            <div class="row" id="proBanner">
            </div>
            <div class="page-header">
              <h3 class="page-title">
                <span class="page-title-icon bg-gradient-primary text-white mr-2">
                  <i class="mdi mdi-school"></i>
                </span> Brukere
              </h3>
            </div>
            <div class="row">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <div class="table-responsive">
                       @if (Model.Any())
                              {
                                  <table class="table">
                                      <tr>
                                          <th>#</th>
                                          <th>Id</th>
                                          <th>Navn</th>
                                          <th>By</th>
                                          <th>E-Post</th>
                                      </tr>
                                      @foreach (var item in Model)
                                      {
                                          
                                          <tr>
                                              @{i = i + 1;}
                                              <td>@i</td>
                                              <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                                              <td>@item.UserName</td>
                                              <td>@item.City</td>
                                              <td><span class="badge bg-label-primary me-1">@item.Email</span></td>
                                          </tr>
                                      }
                                  </table>
                                  <br/>
                                 
                              }  
                              else
                              {
                                  <div class="alert alert-info">
                                        <strong>Info!</strong> Ingen brukere funnet.
                                  </div>
                              }
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
